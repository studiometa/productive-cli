{
  "name": "@studiometa/productive-mcp",
  "version": "0.1.0",
  "description": "MCP server for Productive.io API - Model Context Protocol integration for Claude Desktop",
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "bin": {
    "productive-mcp": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build && tsc --emitDeclarationOnly && node scripts/postbuild.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "oxlint src",
    "format": "oxlint --fix src",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "productive",
    "claude",
    "ai",
    "project-management"
  ],
  "author": "Studio Meta",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/studiometa/productive-cli",
    "directory": "packages/productive-mcp"
  },
  "engines": {
    "node": ">=24.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "@studiometa/productive-cli": "*"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "oxlint": "^0.16.1",
    "typescript": "^5.7.3",
    "vite": "^6.0.7",
    "vitest": "^2.1.8"
  }
}
